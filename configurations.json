{
    "device-name": "Smart Kettle App",
    "device-type": "Kettle",
    "buffers-count": 2,
    "input-buffers":{
    
        "1":
        {
            "token-delimitators": "",
            "protocol": "MQTT",
            "topic": "kettle/viscosity",
            "message-type": "publish",
            "buffer-tokens":[
            {
                "name":"threshold",
                "description":"Viscosity threshold",
                "token-type":"string", 
                "byte-size":10, 
                "regex-rule": "^(100|[7-9]?[0-9])$",
                "optional": false
            },
            {
		"name":"temperature",
		"description":"Optimal temperature considering the viscosity of the liquid",
		"token-type":"string", 
		"byte-size":10, 
		"regex-rule": "^(100|[1-9]?[0-9])$",
		"optional": false
            },
            ]
            
        },
        
        
        "2":
        {
            "token-delimitators": ",",
            "protocol": "HTTP",
            "body-type": "json",
            "prefix": "curl -XPOST 'http://127.0.0.1:9080/makeTea'",
            "buffer-tokens":[
            
            {
                "name":"keepWarm",
                "description":"Choose if you want the kettle to keep your tea warm",
                "token-type":"boolean", 
                "regex-rule": "[true|false]",
                "optional": false
            },
            
            {
                "name":"temperature",
                "description":"Temperature information",
                "token-type":"json", 
                "byte-size":200, 
                "optional": false,
                "body": [{
		        "name":"temperature",
		        "description":"Set the boiling temperature",
		        "token-type":"string", 
		        "byte-size":3, 
		        "regex-rule": "([1-3][0-9][0-9])|([1-2][0-9]?[0-9]?)",
		        "optional": false
		    },
		    {
		        "name":"scale",
		        "description": "Choose between the Celsius and Fahrenheit scale",
		        "token-type":"string",
		        "byte-size":1,
		        "regex-rule": "[F|C]",
		        "optional": false
		    }]
		    
		    
            },
            
            {
            
                "name":"time",
                "description":"How long should the kettle keep the tea warm (minutes)",
                "token-type":"integer", 
                "byte-size":8, 
                "regex-rule": "[1-9][1-9]?[1-9]?",
                "optional": false
            },
            ]
        
        }
        
        
        
        
        
    },
    "output-buffers":{
        
	"1":{
            "token-delimitators": "",
            "protocol": "HTTP",
            "prefix": "curl -XGET 'http://127.0.0.1:9080/'",
            "buffer-tokens":[
            {
                "name":"temperature",
                "description":"Set the boiling temperature",
                "token-type":"string", 
                "byte-size":3, 
                "regex-rule": "([1-3][0-9][0-9])|([1-2][0-9]?[0-9]?)",
                "optional": false
            },
            {
                "name":"scale",
                "description": "Choose between the Celsius and Fahrenheit scale",
                "token-type":"string",
                "byte-size":1,
                "regex-rule": "[F|C]",
                "optional": false
            }
            ]
            
        },
        
        "2": {
            "token-delimitators": "",
            "protocol": "HTTP",
            "prefix": "curl -XGET 'http://127.0.0.1:8080/'",
            "buffer-tokens":[
            {
                "name":"rmp",
                "description":"Set the rpm option for stirring a liquid (percentage)",
                "token-type":"integer", 
                "byte-size":8, 
                "regex-rule": "^(100|[1-9]?[0-9])$", 
                "optional": false
            }
            ]
        },
        
	"3":
        {
            "token-delimitators": ",",
            "protocol": "MQTT",
            "topic": "kettle/scheduler",
            "message-type": "publish",
            "buffer-tokens":[
            
            {
                "name":"recurrent",
                "description":"Choose if you want the schedule pattern to be recurrent",
                "token-type":"boolean", 
                "regex-rule": "[true|false]",
                "optional": false
            },
            
            {
                "name":"temperature",
                "description":"Temperature information",
                "token-type":"json", 
                "byte-size":200, 
                "optional": false,
                "body": [{
		        "name":"temperature",
		        "description":"Set the boiling temperature",
		        "token-type":"string", 
		        "byte-size":3, 
		        "regex-rule": "([1-3][0-9][0-9])|([1-2][0-9]?[0-9]?)",
		        "optional": false
		    },
		    {
		        "name":"scale",
		        "description": "Choose between the Celsius and Fahrenheit scale",
		        "token-type":"string",
		        "byte-size":1,
		        "regex-rule": "[F|C]",
		        "optional": false
		    }]
		    
		    
            },
            
            {
            
                "name":"hour",
                "description":"Set recurring event hour(HH:MM)",
                "token-type":"string", 
                "byte-size":5, 
                "regex-rule": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$",
                "optional": false
            },
            ]
        
        }
        
        
    }
}
